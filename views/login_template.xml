<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Custom Login Page Template -->
        <template id="login_layout" name="Custom Purple Login Layout" inherit_id="web.login_layout">
            <xpath expr="//body" position="attributes">
                <attribute name="class" add="custom-purple-login" separator=" "/>
            </xpath>
        </template>

        <!-- Custom Login Form -->
        <template id="login" name="Custom Purple Login" inherit_id="web.login">
            <xpath expr="//div[hasclass('card')]" position="attributes">
                <attribute name="class" add="custom-login-card" separator=" "/>
            </xpath>
        </template>
    </data>
</odoo>